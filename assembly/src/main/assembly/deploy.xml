<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>tomcat-overlay</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		
		<!-- shared -->
		<dependencySet>
			<outputDirectory>shared/lib</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<includes>
				<include>org.sakaiproject.calendaring:external-calendaring-service-api:jar:*</include>
				
				<!--  additional -->
				<include>org.mnode.ical4j:ical4j:jar:*</include>
				<include>backport-util-concurrent:backport-util-concurrent:jar:*</include>
				
			</includes>
		</dependencySet>
		
		<!-- components -->
		<dependencySet>
			<outputDirectory>components/external-calendaring-service-pack</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<includes>
				<include>org.sakaiproject.calendaring:external-calendaring-service-pack:war:*</include>
			</includes>
			<unpack>true</unpack>
		</dependencySet>
		
	</dependencySets>
	
</assembly>
